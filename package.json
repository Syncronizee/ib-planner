{
  "name": "ib-planner",
  "version": "0.1.5",
  "private": true,
  "description": "Scholar Board desktop and web app for IB Diploma students.",
  "author": "Lam Nguyen",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev",
    "dev:next": "next dev",
    "rebuild:electron:deps": "electron-builder install-app-deps",
    "rebuild:electron:deps:arm64": "electron-builder install-app-deps --arch=arm64 --platform=darwin",
    "rebuild:electron:deps:x64": "electron-builder install-app-deps --arch=x64 --platform=darwin",
    "icons:generate": "node ./scripts/create-icons.mjs",
    "dev:electron": "pnpm rebuild:electron:deps && concurrently -k \"pnpm dev:next\" \"pnpm dev:electron:main\" \"pnpm dev:electron:app\"",
    "electron:dev": "pnpm dev:electron",
    "dev:electron:main": "pnpm copy:electron:db-assets && tsc -p electron/tsconfig.json --watch",
    "dev:electron:app": "wait-on tcp:3000 dist-electron/main.js && cross-env ELECTRON_START_URL=http://localhost:3000 electron .",
    "build": "next build --webpack",
    "build:web:electron": "cross-env ELECTRON_BUILD=true next build --webpack",
    "repair:electron:standalone": "bash ./scripts/repair-standalone-pnpm-symlinks.sh",
    "copy:electron:db-assets": "node ./scripts/copy-electron-db-assets.mjs",
    "build:electron:main": "tsc -p electron/tsconfig.json && pnpm copy:electron:db-assets",
    "build:electron": "pnpm build:web:electron && pnpm repair:electron:standalone && pnpm build:electron:main",
    "dist:electron": "pnpm icons:generate && pnpm build:electron && electron-builder",
    "electron:build": "pnpm dist:electron",
    "electron:build:mac": "pnpm icons:generate && pnpm rebuild:electron:deps:arm64 && pnpm build:electron && electron-builder --mac --arm64 --publish never",
    "electron:build:mac:x64": "pnpm icons:generate && pnpm rebuild:electron:deps:x64 && pnpm build:electron && electron-builder --mac --x64 --publish never",
    "electron:build:win": "pnpm icons:generate && pnpm build:electron && electron-builder --win --x64 --publish never",
    "electron:build:linux": "pnpm icons:generate && pnpm build:electron && electron-builder --linux",
    "electron:build:all": "pnpm icons:generate && pnpm build:electron && electron-builder -mwl",
    "electron:build:script": "node ./scripts/build.mjs",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "@fontsource-variable/geist-mono": "^5.2.7",
    "@fontsource/space-mono": "^5.2.9",
    "@geist-ui/core": "^2.3.8",
    "@geist-ui/react": "^2.2.5",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.97.0",
    "@tiptap/core": "^3.20.0",
    "@tiptap/extension-bubble-menu": "^3.20.0",
    "@tiptap/extension-code-block-lowlight": "^3.20.0",
    "@tiptap/extension-highlight": "^3.20.0",
    "@tiptap/extension-image": "^3.20.0",
    "@tiptap/extension-link": "^3.20.0",
    "@tiptap/extension-placeholder": "^3.20.0",
    "@tiptap/extension-text-align": "^3.20.0",
    "@tiptap/extension-underline": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/react": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.3.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.8.3",
    "framer-motion": "^12.34.3",
    "geist": "^1.7.0",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-day-picker": "^9.13.2",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.5.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.33",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^37.10.3",
    "electron-builder": "^26.8.1",
    "eslint": "^9.39.3",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4.2.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "wait-on": "^8.0.5"
  }
}
